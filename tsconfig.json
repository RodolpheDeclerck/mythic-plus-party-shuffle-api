{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "commonjs",   
    "baseUrl": "src",                  
    "rootDir": "./src",                       
    "outDir": "./dist",                       
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,    
    "experimentalDecorators": true,            // Active les décorateurs expérimentaux
    "emitDecoratorMetadata": true       
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}